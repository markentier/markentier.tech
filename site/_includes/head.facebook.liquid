<meta property="og:type" content="article" />
<meta property="og:url" content="{{canonical_url}}">
<meta property="og:title" content="{{page.title}}">
<meta property="og:description" content="{{page.content | strip_html | truncatewords: 32}}">
<meta property="article:published_time" content="{{page.published_date | date: "%FT%T%z"}}" />
<meta property="og:image" content="{{absolute_page_image_url}}">
<meta property="og:site_name" content="{{site.title}}">
<meta property="og:see_also" content="{{site.base_url}}">
<meta property="article:author" content="{{site.data.author}}" />
{%- for kw in keywords_array -%}
<meta property="article:tag" content="{{kw}}" />
{%- endfor -%}
{% comment %} <meta property="article:section" content="{{ page.categories.first }}" /> {% endcomment %}