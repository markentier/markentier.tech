{% for page in collections.posts.pages %}
{%- assign pdate_iso = page.published_date | date: "%FT%T%z" -%}
{%- assign pdate_date = page.published_date | date: "%F" -%}
<article class="index_listing_post" itemscope itemtype="http://schema.org/Article">
  {%- if page.data.has_hero -%}
  {%- assign link_size = page.permalink | size | minus: 0 -%}
  {%- assign page_image_url = "/" | append: page.permalink | slice: 0, link_size | append: ".png" -%}
  <img class="coverthumb" itemprop="image" src="{{page_image_url}}" alt="{{page.data.image_alt | escape}}" />
  {%- endif -%}
  <a href="/{{page.permalink}}"><h2 class="post_title">{{page.title}}</h2>
  {% include "published_at.liquid" %}
  <p>{{page.excerpt | strip_html}}</p></a>
</article>
{% endfor %}
