{%- assign canonical_url = site.base_url | append: "/" | append: page.permalink -%}
{%- assign pdate_iso = page.published_date | date: "%FT%T%z" -%}
{%- assign pdate_date = page.published_date | date: "%F" -%}
{%- if page.collection == "posts" -%}
{%- assign is_post = true -%}
{%- else -%}
{%- assign is_post = false -%}
{%- endif -%}
{%- assign page_type = page.data.page_type -%}
{% comment %} keywords/tags {% endcomment %}
{%- assign all_keywords = page.data.tags | concat: site.data.keywords -%}
{%- capture filtered_keywords -%}{%- for kw in all_keywords limit: 10 -%}
{{kw}}{%- if forloop.index != forloop.length -%}|{%- endif -%}
{%- endfor -%}{%- endcapture -%}
{%- assign keywords_array = filtered_keywords | strip | split: "|" | compact -%}
{%- assign keywords = keywords_array | join: "," -%}
{% comment %} page hero image {% endcomment %}
{%- if page.data.has_hero -%}
{%- assign link_size = page.permalink | size | minus: 0 -%}
{%- assign page_image_url = "/" | append: page.permalink | slice: 0, link_size | append: ".png" -%}
{%- else -%}
{%- assign page_image_url = "/" | append: page.data.image_url -%}
{%- endif -%}
{%- assign absolute_page_image_url = site.base_url | append: page_image_url -%}